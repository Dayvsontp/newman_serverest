			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const res = pm.response.json();\r",
							"\r",
							"let token = res.authorization || res.token || res.access_token || \"\";\r",
							"if (token.startsWith(\"Bearer \")) token = token.slice(7);\r",
							"\r",
							"pm.environment.set(\"token\", token);\r",
							"\r",
							"pm.test(\"Status 200\", () => {\r",
